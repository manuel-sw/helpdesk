<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- ACTIONS -->
  <record id="task_action_ticket_new" model="ir.actions.act_window">
    <field name="name">Ticket</field>
    <field name="res_model">helpdesk.ticket</field>
    <field name="view_mode">form</field>
    <field name="domain">[('task_id', '=', active_id)]</field>
    <field name="context">{'search_default_task_id': active_id, 'default_task_id': active_id}</field>
  </record>

  <record id="task_action_view_tickets" model="ir.actions.act_window">
    <field name="name">Tickets</field>
    <field name="res_model">helpdesk.ticket</field>
    <field name="view_mode">tree</field>
    <field name="domain">[('task_id', '=', active_id)]</field>
  </record>

  <!-- VIEWS -->
  <record id="project_task_ticket_view_form" model="ir.ui.view">
    <field name="name">view.project_task_ticket.form</field>
    <field name="model">project.task</field>
    <field name='inherit_id' ref='project.view_task_form2'/>
    <field name="arch" type="xml">
      <xpath expr="//button[@name='action_assign_to_me']" position="after">
        <button string="New Ticket" name="action_new_ticket" type="object" />
      </xpath>
      <xpath expr="//button[@name='action_subtask']" position="before">
          <button class="oe_stat_button" type="object" name="action_view_tickets" icon="fa-check" >
              <field name="ticket_count" widget="statinfo" string="Tickets"/>
              <span class="o_stat_text">(py)</span>
          </button>
      </xpath>
      <xpath expr="//button[@name='action_subtask']" position="before">
          <button class="oe_stat_button" type="action" name="%(task_action_view_tickets)d" icon="fa-check" >
              <field name="ticket_count" widget="statinfo" string="Tickets"/>
              <span class="o_stat_text">(xml)</span>
          </button>
      </xpath>
      <notebook position="inside">
        <page name="ticket" string="Tickets">
            <group>
              <field name="ticket_ids" string="Tickets" />
            </group>
        </page>
      </notebook>
    </field>
  </record>



</odoo>
